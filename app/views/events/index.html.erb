<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Description</th>
      <th>Stream type</th>
      <th>Stream key</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th>Next event</th>
      <th>Status</th>
      <th>Embed</th>
      <th>Banned user ids</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.user_id %></td>
        <td><%= event.description %></td>
        <td><%= event.stream_type %></td>
        <td><%= event.stream_key %></td>
        <td><%= event.starts_at %></td>
        <td><%= event.ends_at %></td>
        <td><%= event.next_event_id %></td>
        <td><%= event.status %></td>
        <td><%= event.embed %></td>
        <td><%= event.banned_user_ids %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

